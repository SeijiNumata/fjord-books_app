<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit t('views.follow.submit_unfollow') %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit t('views.follow.submit_follow') %>
    <% end %>
  <% end %>
<% end %>

<%= link_to  "#{t('views.follow.follow')}#{user.followings.count}", user_followings_path(user) %><br>
<%= link_to  "#{t('views.follow.follower')}#{user.followers.count}", user_followers_path(user) %><br>
