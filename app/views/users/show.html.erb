<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
  <table>
  <thead>
    <tr>
      <th>名前</th>
      <th>郵便番号</th>
      <th>住所</th>
      <th>アドレス</th>
      <th>自己紹介</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @user.user_name %></td>
        <td><%= @user.postal_code %></td>
        <td><%= @user.address %></td>
        <td><%= @user.email %></td>
        <td><%= @user.introduce_yourself %></td>
      </tr>
  </tbody>
</table>
<% else %>
  <h1>ユーザーページ</h1>
    <table>
  <thead>
    <tr>
      <th>名前</th>
      <th>自己紹介</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @user.user_name %></td>
        <td><%= @user.introduce_yourself %></td>
      </tr>
  </tbody>
<% end %>


